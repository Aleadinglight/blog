---
const { href, ...props } = Astro.props;
const pathname = Astro.url.pathname.replace(import.meta.env.BASE_URL, '');
const subpath = pathname.match(/[^\/]+/g);
const isActive = href === pathname || href === '/' + (subpath?.[0] || '');
---

<a
  href={href}
  class="px-2 py-1 text-gray-800 hover:text-blue-600 border-b-2 border-transparent hover:border-blue-600 transition-colors"
  class:list={[{ 'font-bold border-blue-600': isActive }]}
  {...props}
>
  <slot />
</a>